@model MVC.Models.VehicleMake.CreateMakeVM

<!DOCTYPE html>
<html>
<head>
    <title>Create Vehicle Make</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Create Vehicle Make</h2>
        
        <form method="post" class="mt-4">
            <div class="mb-3">
                <label for="Name" class="form-label">Name:</label>
                <input type="text" asp-for="Name" id="Name" name="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
    
            <div class="mb-3">
                <label for="Abrv" class="form-label">Abbreviation:</label>
                <input type="text" asp-for="Abrv" id="Abrv" name="Abrv" class="form-control">
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
    
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</body>
</html>
