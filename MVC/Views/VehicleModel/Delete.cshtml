@model Service.Models.VehicleModel

<!DOCTYPE html>
<html>
<head>
    <title>Delete Vehicle Model</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Delete Vehicle Model</h2>

        <div class="mt-4">
            <h4>Are you sure you want to delete this vehicle model?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    ID
                </dt>
                <dd class="col-sm-10">
                    @Model.Id
                </dd>
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
                <dd class="col-sm-2">
                    Vehicle Make Name
                </dd>
                <dd class="col-sm-10">
                    @Model.VehicleMake.Name
                </dd>
                <dd class="col-sm-2">
                    Vehicle Make Abbreviation
                </dd>
                <dd class="col-sm-10">
                    @Model.VehicleMake.Abrv
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <input type="submit" value="Delete" class="btn btn-danger">
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
