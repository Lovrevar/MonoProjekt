    @model MVC.Models.VehicleModel.CreateModelVM

    <!DOCTYPE html>
    <html>
    <head>
        <title>Create Vehicle Model</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
    <div class="container mt-5">
        <h2>Create Vehicle Model</h2>

        <form asp-action="Create" class="mt-4">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" id="Name" name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @{
                var vehicleMakes = ViewBag.vehicleMakes as List<Service.Models.VehicleMake>;
            }
            <div class="mb-3">
                <label asp-for="MakeId" class="form-label">Vehicle Make</label>
                <select class="form-select" asp-for="MakeId" id="MakeId" name="MakeId" aria-label="Vehicle Make">
                    <option value="" selected>Choose a Vehicle Make</option>
                    @if (vehicleMakes != null)
                    {
                        @foreach (var vehicleMake in vehicleMakes)
                        {
                            <option value="@vehicleMake.Id">@vehicleMake.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="MakeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
    </body>
    </html>
