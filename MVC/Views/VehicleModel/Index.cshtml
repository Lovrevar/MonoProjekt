@model MVC.Models.VehicleModel.ModelListVM
@using Microsoft.AspNetCore.Mvc.Rendering

<!DOCTYPE html>
<html>
<head>
    <title>Vehicle Models</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Vehicle Models</h1>

        <div class="row mt-3">
            <div class="col">
                <a href="@Url.Action("Create")" class="btn btn-primary">Create</a>
            </div>
            <div class="col">
                <form method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" name="searchString" value="@Model.SearchString">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th><a href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage, searchString = Model.SearchString, sortOrder = "id_asc" })">Id</a></th>
                    <th><a href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage, searchString = Model.SearchString, sortOrder = "name_asc" })">Name</a></th>
                    <th><a href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage, searchString = Model.SearchString, sortOrder = "make_asc" })">Make Name</a></th>
                    <th><a href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage, searchString = Model.SearchString, sortOrder = "abrv_asc" })">Make Abrv</a></th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicleModel in Model.Models)
                {
                    <tr>
                        <td>@vehicleModel.Id</td>
                        <td>@vehicleModel.Name</td>
                        <td>@vehicleModel.MakeName</td>
                        <td>@vehicleModel.MakeAbrv</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = vehicleModel.Id })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", new { id = vehicleModel.Id })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="container pagination">
        @if (Model.Pagination.TotalPages > 1)
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (Model.Pagination.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage - 1, searchString = Model.SearchString })">Previous</a>
                        </li>
                    }
                    @for (var i = 1; i <= Model.Pagination.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, searchString = Model.SearchString })">@i</a>
                        </li>
                    }
                    @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage + 1, searchString = Model.SearchString })">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</body>
</html>
