@model MVC.Models.VehicleMake.UpdateMakeVM

<!DOCTYPE html>
<html>
<head>
    <title>Edit Vehicle Make</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>Edit Vehicle Make</h2>

    <form role="form" asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" asp-for="Name" id="Name" name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Abrv" class="form-label">Abbreviation</label>
            <input type="text" asp-for="Abrv" id="Abrv" name="Abrv" class="form-control" />
            <span asp-validation-for="Abrv" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
</body>
</html>